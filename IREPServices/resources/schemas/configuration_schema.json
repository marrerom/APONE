{
"$schema" : "http://json-schema.org/schema#",
"id" : "configuration_schema.json",
"title" : "Run schema",
"description" : "Data related to the status and configuration -distribution and stopping conditions- of an existing experiment",
"type" : "object",
"properties": 
	{
	"idrun": {"type":"string"},
	"name": {"type":"string"},
	"experimenter": {"type":"string"},
	"description": {"type":"string"},
	"controller_code": {"type":"string"},
	"date_started": {"type": "string"},
	"date_ended": {"type": "string"},
	"run":{"enum":["on","off"], "default":"on"},
	"segments": {"type": "numeric"},
	"date_to_end": {"type": "string"},
	"max_exposures": {"type": "numeric"},
	"test":{"enum":["on","off"], "default":"on"},
	"dist": {"$ref": "distribution_schema.json" } 
	},
	"required": ["idrun", "name", "experimenter", "controller_code"]
}