{
"$schema" : "http://json-schema.org/schema#",
"id" : "run_schema.json",
"title" : "Run schema",
"description" : "Data related to the status and configuration -distribution and stopping conditions- of an existing experiment",
"type" : "object",
"properties": 
	{
	"idrun": {"type":"string"},
	"name": {"type":"string"},
	"experimenter": {"type":"string"},
	"description": {"type":"string"},
	"controller_code": {"type":"string"},
	"configuration": {"$ref":"configuration_schema.json"},
	"events": {},
	"date_started": {"type": "string"},
	"date_ended": {"type": "string"},
	"status":{"enum":["on","off"], "default":"on"}
	},
	"required": ["idrun", "name", "experimenter", "controller_code"]
}