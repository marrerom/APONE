{
"$schema" : "http://json-schema.org/schema#",
"id" : "experiment_schema.json",
"title" : "Experiment schema",
"description" : "Data related to the definition of an experiment",
"type" : "object",
"properties" : 
	{
	"idexp": {"type":"string"},
	"name": {"type":"string"},
	"experimenter": {"type":"string"},
	"description": {"type":"string"},
	"unit": {"type":"string"},
	"control_treatment": {"type":"string"},
	"treatment" : {"type":"array", "items": {"$ref": "treatment_schema.json" } },
	"config" : {"type":"array", "items": {"$ref": "configuration_schema.json" } }
	},
"required": ["idexp","name", "experimenter", "treatment", "control_treatment"]
}
